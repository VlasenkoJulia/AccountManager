<configuration>
    <timestamp key="byDay" datePattern="yyyyMMdd"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file> /logback/logs/accountManager/log-${byDay}.txt </file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %highlight(%-5level) %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="account_manager.client.ClientService" level="INFO">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="account_manager.card.CardService" level="INFO">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="account_manager.user.UserService" level="INFO">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="account_manager.account.AccountService" level="INFO">
        <appender-ref ref="FILE" />
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>